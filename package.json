    "@nuxt/eslint": "^1.4.1",
    "@nuxt/eslint-config": "^1.4.1",
    "@nuxt/icon": "2.0.0",
    "@nuxt/image": "^1.7.0",
    "@nuxtjs/google-fonts": "^3.0.1",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/color": "^3.0.3",
    "@types/node": "^20.11.25",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "markdownlint": "^0.29.0",
    "markdownlint-cli2": "^0.11.0",
    "nuxt": "^4.1.2",
    "nuxt-gtag": "^4.0.0",
    "nuxt-schema-org": "^5.0.5",
    "prettier": "^3.5.3",
    "sass": "^1.63.4",
    "shiki": "^1.15.2",
    "sitemap": "^7.1.1",
    "typescript": "^5.4.2"
  },
