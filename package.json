{
  "private": true,
  "lint-staged": {
    "*.{ts,js,vue}": [
      "pnpm format",
      "pnpm lint:fix"
    ],
    "*.md": [
      "pnpm format",
      "pnpm mdlint:fix"
    ]
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "format": "prettier --write ./**/*.{ts,js,vue}",
    "format:check": "prettier --check ./**/*.{ts,js,vue}",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "mdlint": "markdownlint-cli2 ./content/**/*.md '#node_modules' '#.nuxt'",
    "mdlint:fix": "markdownlint-cli2 --fix ./content/**/*.md '#node_modules' '#.nuxt'",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@iconify-json/bi": "^1.2.6",
    "@iconify-json/fa": "^1.2.2",
